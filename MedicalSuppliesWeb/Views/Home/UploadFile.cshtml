
<!DOCTYPE html>
<html lang="en">
<head>

    <link rel="stylesheet" href="~/css/shared-style.css" />

</head>

<body>

    <div class="row">
        <partial name="_LeftColumn" />
        <div class="col-md-8 column">

            <partial name="_SearchBox" />

            @*DYNAMIC CONTENT BEGIN*@

            <div class="container" style="padding-top:150px">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card p-4">
                            <h2 class="text-center mb-4">Upload</h2>
                            <form asp-controller="Home" asp-action="UploadFile" method="post" enctype="multipart/form-data">
                                <div class="form-group mb-3">
                                    <input type="file" id="fileInput" name="file" class="form-control-file" required>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-sm btn-outline-dark">Upload</button>
                                </div>
                                @{
                                    Html.EndForm();
                                }
                            </form>
                        </div>
                    </div>
                </div>
            </div>           

            @*/END/*@

        </div>

        <partial name="_RightColumn" />

    </div>

    <script src="~/js/DateTime.js"></script>
</body>
</html>
