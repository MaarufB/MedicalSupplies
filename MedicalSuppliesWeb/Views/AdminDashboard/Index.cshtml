    {
        var order = new CustomerOrderVm
                {
                    CustomerOrderId = i,
                    Date = DateTime.Now.AddDays(i),
                    CustomerOrderTotal = 200 + (i * 75),
                    TicketStatus = i % 2 == 0 ? "Rejected" : "Review"
                };
        customerOrders.Add(order);
    }

