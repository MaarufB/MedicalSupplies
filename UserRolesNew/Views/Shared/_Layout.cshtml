
<style>
    .nav-link {
        
        cursor: pointer;
        text-decoration: none;
        margin-left: 10px;
    }
</style>





<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UserRolesNew</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UserRolesNew.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1>XYZ Medicals</h1>
                </div>
                <div class="col-md-6 d-flex justify-content-end">
                    <a href="/" class="nav-link text-dark">Home</a>


                    @if (User.Identity.IsAuthenticated)
                    {
                        <span><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Logout</a></span>
                        @*<span><a class="nav-link text-dark" asp-area="Identity" asp-page="/Areas/Identity/Pages/_ManageNav/Index">Hi, @User.Identity.Name</a></span>*@
                        <span><a class="nav-link text-dark" href="/Identity/Account/Manage/Index">Hi, @User.Identity.Name</a></span>

                    }

                    else
                    {
                        <span><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a></span>
                        <span><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a></span>
                    }


               @*     <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>*@
                </div>
            </div>
        </div>
    </header>




    <div class="container">
        <main role="main" class="pb-3">
            <h1>@ViewData["Title"]</h1>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - XYZ Medicals - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
