@page
@model RegisterModel
@*@{
    ViewData["Title"] = "Register";
}*@

<link href="https://fonts.googleapis.com/css?family=Roboto:400,500&display=swap" rel="stylesheet">

<style>
    body {
        background-color: #E1F5FE;
        font-family: 'Roboto', sans-serif;
    }

    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .register-box {
        background-color: #D1EAFD;
        padding: 20px;
        border-radius: 5px;
        text-align: center;
    }

    .register-title {
        margin-bottom: 20px;
        color: #333333;
        font-weight: 500;
    }

    .form-floating {
        margin-bottom: 15px;
    }

    .form-control.form-control-sm {
        background-color: #FFFFFF;
        border-color: #C0C0C0;
        color: #333333;
    }

        .form-control.form-control-sm:focus {
            background-color: #FFFFFF;
            border-color: #8D6E63;
            box-shadow: 0 0 0 0.2rem rgba(141, 110, 99, 0.25);
        }

    .form-label {
        color: #333333;
        font-weight: 500;
    }

    .register-submit {
        padding: 10px 20px;
        font-size: 14px;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="center-container">
    <div class="col-md-4">
        <section>
            <div class="register-box">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="register-title">Create Account</h2>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating">
                        @*<label asp-for="Input.FirstName"></label>*@
                        <input asp-for="Input.FirstName" class="form-control form-control-sm" />
                        <label asp-for="Input.Email" class="form-label">First Name</label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        @*<label asp-for="Input.LastName"></label>*@
                        <input asp-for="Input.LastName" class="form-control form-control-sm"  />
                        <label asp-for="Input.Email" class="form-label">Last Name</label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control form-control-sm" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control form-control-sm" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-sm" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="btn btn-primary btn-sm register-submit">Register</button>
                </form>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
